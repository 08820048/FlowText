{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "flow-text",
  "version": "0.1.0",
  "identifier": "com.xuyi.flow-text",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FlowText - 视频字幕生成工具",
        "width": 1600,
        "height": 1000,
        "minWidth": 1400,
        "minHeight": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
